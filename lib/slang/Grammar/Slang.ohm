Slang {
  // A Program is the root of our grammar.
  Program = Stmt+

  Stmt = Assignment
    // | Defun
    | Expr
      //  | Funcall
  
  Defun = Arglist "=>" Expr
   
  Assignment = ident "=" Expr

  Expr
    = Defun | AddExp

  Funcall = (Funcall | ident) Arglist
  
  Arglist = "(" (Expr ",")* Expr? ")"

  AddExp
    = AddExp "+" MulExp  -- plus
    | AddExp "-" MulExp  -- minus
    | MulExp

  MulExp
    = MulExp "*" ExpExp  -- times
    | MulExp "/" ExpExp  -- divide
    | ExpExp

  ExpExp
    = PriExp "^" ExpExp  -- power
    | PriExp

  PriExp
    = "(" Expr ")"  -- paren
    | "+" PriExp   -- pos
    | "-" PriExp   -- neg
    | Funcall
    // | Defun
    | ident
    | number

  ident  (an identifier)
    = letter alnum*

  number  (a number)
    = digit* "." digit+  -- fract
    | digit+             -- whole
}